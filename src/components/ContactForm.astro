<form name='contact' method='POST' data-netlify='true'>
	<h1 class='text-2xl font-bold dark:text-slate-50'>Contact Form</h1>
	<p class='py-4 text-xl font-semibold dark:text-slate-50'>
		<label>Your Name: <input class='ml-4' type='text' name='name' /></label>
	</p>
	<p class='py-4 text-xl font-semibold dark:text-slate-50'>
		<label>Your Email: <input class='ml-4' type='email' name='email' /></label>
	</p>
	<p class='py-4 text-xl font-semibold dark:text-slate-50'>
		<label>Message: <textarea class='ml-8' name='message'></textarea></label>
	</p>
	<p class='py-6 text-xl font-semibold dark:text-slate-50'>
		<button
			class='bg-slate-400 hover:bg-slate-300 focus:bg-slate-400 text-slate-100 px-4 py-1 rounded-md'
			type='submit'>Send</button
		>
	</p>
</form>
